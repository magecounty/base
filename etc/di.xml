<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
   <!-- Custom Logger -->
    <type name="Apexx\Base\Helper\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">ApexxBase</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Apexx\Base\Helper\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
